.container {
	display: flex;
}

.reaction {
	@mixin transitionAll;

	min-width: 71px;
	height: 24px;
	border: 1px solid #e6e6e6;
	margin-right: 10px;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #343434;
	font-size: 12px;
	font-weight: 400;
	cursor: pointer;

	&.empty {
		min-width: 30px;
	}

	&.active {
		border: 1px solid $brandColor;
	}
}

.count {
	padding-left: 5px;
}

.dislikeIcon {
	transform: rotate(180deg);
}
